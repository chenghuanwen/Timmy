<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="splash_style" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/timmy</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="timmy_Radiobutton">
        <item name="android:textColor">@drawable/bottom_textcolor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="timmy_TextView">
        <item name="android:textColor">#43556c</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">13dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#fff</item>
    </style>

    <style name="bottom_Radiobutton">
        <item name="android:textColor">@drawable/top_textcolor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">5sp</item>

    </style>
</resources>
