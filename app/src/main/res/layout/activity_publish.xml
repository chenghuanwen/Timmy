<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_publish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f6f6f6"
    tools:context="com.dgkj.tianmi.view.PublishActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#fff">
        <TextView
            android:id="@+id/tv_goback"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="发帖"
            android:textSize="18sp"
            android:textColor="#6c5a5a"
            android:gravity="center"
            android:drawableLeft="@mipmap/fanhui"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="输入标题（30字以内）"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="#fff"/>

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="输入内容（300字以内）"
        android:gravity="top|left"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#fff"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择主题分类："
        android:textColor="#333"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"/>
    <GridView
        android:id="@+id/gv_theme"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="3"
        android:columnWidth="2dp"
        android:horizontalSpacing="2dp"

        ></GridView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_publish"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="发表"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/btn_background"/>
    </LinearLayout>


</LinearLayout>
